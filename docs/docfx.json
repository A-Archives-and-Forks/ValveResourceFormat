{
	"$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
	"metadata": [
		{
			"src": [
				{
					"src": "../ValveResourceFormat",
					"files": [
						"ValveResourceFormat.csproj"
					]
				}
			],
            "output": "api"
		}
	],
	"build": {
		"content": [
			{
				"files": [
					"**/*.{md,yml}"
				],
                "exclude": [
                    "_site/"
                ]
			}
		],
        "resource": [
            {
                "src": "../Misc/Icons",
                "dest": "images",
                "files": [
                    "source2viewer_dark.png",
                    "source2viewer.ico"
                ]
            }
        ],
		"output": "_site",
		"template": [
			"default",
			"modern",
            "vrf_template"
		],
		"globalMetadata": {
			"_appName": "ValveResourceFormat",
			"_appTitle": "ValveResourceFormat",
            "_appLogoPath": "images/source2viewer_dark.png",
            "_appFaviconPath": "images/source2viewer.ico",
            "_appFooter": "",
			"_enableSearch": true,
            "_lang": "en",
			"pdf": false
		}
	}
}
